{
  "variables": {
    "aws_access_key": "{{ env `AWS_ACCESS_KEY` }}",
    "aws_secret_access_key": "{{ env `AWS_SECRET_ACCESS_KEY` }}",
    "box_version": "{{ env `BOX_VERSION` }}"
  },
  "builders": [{
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key":"{{user `aws_secret_access_key`}}",
      "ami_name": "debian_to_kali_golden",
      "region": "us-east-1",
      "source_ami": "ami-0cfac3931b2a799d1",
      "instance_type": "t2.medium",
      "communicator": "ssh",
      "ssh_username": "admin",
      "security_group_id": "sg-0dea37d8a00e64f73",
      "run_tags":{"Name":"Debian to CSI Kali Rolling Golden Image"}
  }],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "provisioners/init_debian_to_kali.sh"
      ]
    }
  ]
}

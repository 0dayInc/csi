{
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "Debian_64",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "1024"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ],
    "disk_size": 33792,
    "hard_drive_interface": "sata",
    "http_directory": "http",
    "iso_url": "http://cdimage.kali.org/kali-2017.1/kali-linux-2017.1-amd64.iso",
    "iso_checksum": "49b1c5769b909220060dc4c0e11ae09d97a270a80d259e05773101df62e11e9d",
    "iso_checksum_type": "sha256",
    "headless": false,
    "boot_command": [
      "<esc><wait>",
      "install <wait>",
      "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kali_rolling_preseed.cfg <wait>",
      "debian-installer=en_US <wait>",
      "auto <wait>",
      "locale=en_US.UTF8 <wait>",
      "kbd-chooser/method=us <wait>",
      "netcfg/get_hostname=rolling <wait>",
      "netcfg/get_domain={{.Name}} <wait>",
      "console-keymaps-at/keymap=us <wait>",
      "keyboard-configuration/xkb-keymap=us <wait>",
      "<enter><wait>"
    ],
    "boot_wait": "3s",
    "communicator": "ssh",
    "ssh_username": "kalicsi",
    "ssh_password": "K4Lics1!",
    "ssh_port": 22,
    "ssh_wait_timeout": "999s",
    "shutdown_command": "echo 'PACKER => shutting down' | shutdown -P now"
  }],
  "provisioners": [{
    "type": "shell",
    "script": "provisioners/pack_virtualbox.sh",
    "pause_before": "9s"
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "9",
    "output": "kali_rolling_virtualbox.box"
  }]
}

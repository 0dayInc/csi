#!/usr/bin/env ruby
require 'base64'

opts = {}
OptionParser.new do |options|
  options.banner = "USAGE:
    #{$PROGRAM_NAME} [opts]
  "

  options.on('-pSTRING', '--payload=STRING', '<Required - String to Encode>') do |p|
    opts[:payload] = p
  end
end.parse!

payload = opts[:payload].to_s.scrub
puts Base64.strict_encode64(payload)

#!/usr/bin/env ruby
require 'csi'
require 'pry'
require 'rainbow'

begin
  pry_obj = Pry

  pry_obj::Commands.create_command "toggle-pager" do
    description "Toggle less on returned objects surpassing the terminal."

    def process
      if _pry_.config.pager
        _pry_.config.pager = false
      else
        _pry_.config.pager = true
      end
    end
  end

  line = ->(pry) { pry.input_array.size }
  prompt_arrow = Rainbow("\u00bb").green.to_s.scrub
  #pry_obj.config.prompt = [ 
  #  ->(object, nest_level, pry) do 
  #    #"#{Rainbow("csi").red.bright}[v#{CSI::VERSION}]:#{line.(pry)} #{prompt_arrow} \e[0m"
  #    "#{Rainbow("csi").red.bright}[v#{CSI::VERSION}]:#{nest_level} #{prompt_arrow} \e[0m"
  #  end, 
  #  ->(object, nest_level, pry) do
  #     #"#{Rainbow("csi").red.bright}[v#{CSI::VERSION}]:#{line.(pry)} * \e[0m"
  #     "#{Rainbow("csi").red.bright}[v#{CSI::VERSION}]:#{nest_level} * \e[0m"
  #  end
  #]
  pry_obj.start(:prompt => [ proc { "#{Rainbow("csi").red.bright}[v#{CSI::VERSION}]:#{line} #{prompt_arrow} \e[0m" }, proc { "#{Rainbow("csi").red.bright}[v#{CSI::VERSION}]:#{line+=1} * \e[0m" } ])
ensure
  if $browser
    $browser = CSI::Plugins::TransparentBrowser.close(
      :browser_obj => $browser
    )
  end
end

#!/usr/bin/env ruby
require 'csi'
require 'pry'
require 'rainbow'

begin
  class CSISession
    attr_reader :pry_obj
    def intialize(opts={})
      @pry_obj = opts[:pry_obj]
    end

    def toggle_pager
      if @pry_obj.config.pager
        @pry_obj.config.pager = false
      else
        @pry_obj.config.pager = true
      end
    end
  end

  line = ->(pry) { pry.input_array.size }
  prompt_arrow = Rainbow("\u00bb").green
  Pry.config.prompt = [ 
    ->(object, level, pry) do 
      "#{Rainbow("csi").red.bright}[v#{CSI::VERSION}]:#{line.(pry)} #{prompt_arrow} \e[0m"
    end, ->(object, level, pry) do
       "#{Rainbow("csi").red.bright}[v#{CSI::VERSION}]:#{line.(pry)} * \e[0m"
    end
  ]
  csi = CSISession.new(:pry_obj => Pry)
  Pry.start
ensure
  if $browser
    $browser = CSI::Plugins::TransparentBrowser.close(
      :browser_obj => $browser
    )
  end
end

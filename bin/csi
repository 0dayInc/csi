#!/usr/bin/env ruby
require 'csi'
require 'pry'
require 'rainbow'

begin
  pry_obj = Pry

  pry_obj::Commands.create_command "toggle-pager" do
    description "Toggle less on returned objects surpassing the terminal."

    def process
      if _pry_.config.pager
        _pry_.config.pager = false
      else
        _pry_.config.pager = true
      end
    end
  end

  prompt_arrow = Rainbow("\u00bb").green.to_s.scrub
  pry_obj.config.prompt = [ 
    proc do |object, nest_level, pry|
      "#{Rainbow("csi").red.bright}[v#{CSI::VERSION}]:#{nest_level}.#{__LINE__} #{prompt_arrow} \e[0m"
    end, 
    proc do |object, nest_level, pry|
      "#{Rainbow("csi").red.bright}[v#{CSI::VERSION}]:#{nest_level}.#{__LINE__} * \e[0m"
    end
  ]
  pry_obj.start
ensure
  if $browser
    $browser = CSI::Plugins::TransparentBrowser.close(
      :browser_obj => $browser
    )
  end
end
